@model CourseUdemyNetMvc.Models.ApplicationType

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">New ApplicationType</h2>
        </div>
        
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="Name" class="form-label">ApplicationType Name</label>
                    <input asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <br />
            <div class="d-grid gap-2 d-md-block">
                <button type="submit" class="btn btn-primary">Create new ApplicationType</button>
                <a asp-controller="ApplicationType" asp-action="Index" class="btn btn-success">Back</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{ <partial name ="_ValidationScriptsPartial" />}
}