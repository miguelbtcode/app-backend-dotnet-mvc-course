@model IEnumerable<CourseUdemyNetMvc.Models.Category>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Categories List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> New Category
            </a>
        </div>
    </div>
    
    @if (Model.Any())
    {
        <table class="table table-bordered table-striped" style="width: 100%">
            <caption>This table describes the Categories</caption>
            <thead>
            <tr>
                <th id="idTitleCategoryName">Category name</th>
                <th id="idTitleCategoryOrder">Order</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th id="idRowCategoryName" style="width: 40%">@item.CategoryName</th>
                    <th id="idRowCategoryOrder" style="width: 30%">@item.ShowOrder</th>
                    <th id="idRowOptions" class="text-center" style="width: 30%">
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Category" asp-action="Update" asp-route-Id="@item.Id" class="btn btn-warning mx-2">
                                <i class="fa-solid fa-pen-to-square"></i> Update
                            </a>
                            <a asp-controller="Category" asp-action="Delete" asp-route-Id="@item.Id" class="btn btn-danger mx-2">
                                <i class="fa-solid fa-trash"></i> Delete
                            </a>
                        </div>
                    </th>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <p>No registers from category</p>
    }
</div>