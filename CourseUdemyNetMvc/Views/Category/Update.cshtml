@model CourseUdemyNetMvc.Models.Category

@{
    ViewData["Title"] = "Edit/Update";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Update">
    <input asp-for="Id" hidden>
    <div class="border p-3">

        <div asp-validation-summary="ModelOnly" class="text-danger">

        </div>

        <div class="form-group row">
            <h2 class="text-info pl-3">Update category</h2>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="CategoryName" class="form-label">Category Name</label>
                    <input asp-for="CategoryName" class="form-control">
                    <span asp-validation-for="CategoryName" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="ShowOrder" class="form-label">Orden</label>
                    <input asp-for="ShowOrder" class="form-control">
                    <span asp-validation-for="ShowOrder" class="text-danger"></span>
                </div>
            </div>
            <br/>
            <div class="d-grid gap-2 d-md-block">
                <button type="submit" class="btn btn-warning">Update</button>
                <a asp-controller="Category" asp-action="Index" class="btn btn-success">Back</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{ <partial name ="_ValidationScriptsPartial" />}
}