@model CourseUdemyNetMvc.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Delete">
    <input asp-for="ProductId" hidden>
    <div class="border p-3">

        <div asp-validation-summary="ModelOnly" class="text-danger">
            
        </div>

        <div class="form-group row">
            <h2 class="text-danger pl-3">Estas seguro de eliminar este producto?</h2>
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <label asp-for="ProductName" class="form-label">Product name</label>
                    <input asp-for="ProductName" disabled="" class="form-control">
                    <span asp-validation-for="ProductName" class="text-danger"></span>
                </div>
            </div>
            <br/>
            <div class="d-grid gap-2 d-md-block">
                <button type="submit" class="btn btn-danger">Delete</button>
                <a asp-controller="Product" asp-action="Index" class="btn btn-success">Back</a>
            </div>
        </div>
    </div>
</form>